def remove_zero(n):#Так вводится (определяется) функция
    '''Превращает флоат в инт в том случае, если число целое, чтобы вывод
    был без точки с нулём. Просто для красоты'''
    if n%1 == 0:
        n = int(n)
    return n# return ВОЗВРАЩАЕТ нас туда, где была вызвана функция

def float_input(text):# text - это то, что будет выведено на экран при запросе числа
    '''Ввод числа со встроенной защитой от неверного ввода и вылетов'''
    while True:# цикл нужен, чтобы прога запрашивала число, ПОКА не введёшь его как надо
        try:# пробуем превратить ввод во флоат
            return float(input(text))# если получилось, return прерывает цикл и выводит из фунцкции
        except ValueError:# если не получилось превратить, цикл повторяется
            print('Нужно число\n')

# Функции определены, далее идёт собственно исполняемый код

while True:# Бесконечный цикл нужен, чтобы не надо было перезапускать прогу
    print('Посчитаем?')
    A = float_input('Введи первое число: ')# В первый раз вызываем нашу функцию вместо простого input()
    while True:# Цикл для защиты от неверного ввода
        sign = input('Введи действие (+, -, *, /)')
        if sign not in ('+', '-', '*', '/'):# проверяем, есть ли знак действия в этом списке
            print('Таких действий я не знаю. Выбери из списка\n')
        else:
            break# Знак действия есть в списке. Цикл прерывается
    B = float_input('Введи второе число: ')
    
    if sign == '+':
        result = A+B
    elif sign == '-':
        result = A-B
    elif sign == '*':
        result = A*B
    elif sign == '/':
        result = A/B

    # выводим полное выражение, используя нашу функцию обрезки нуля
    print(remove_zero(A), sign, remove_zero(B), '=', remove_zero(result), '\n')
    # Теперь программа вернётся к началу и предложит посчитать ещё
